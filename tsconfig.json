{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2017", "es2015", "dom", "es6"],
        "module": "commonjs",
        "declaration": true,
        "outDir": "lib",
        "rootDir": "src",
        "sourceMap": false,
        "strict": true,
        "types": ["node"],
        "esModuleInterop": true,
        "resolveJsonModule": true,
    },
    "include": ["src/**.ts"],
    "exclude": ["node_modules", "**/__tests__/*"]
}